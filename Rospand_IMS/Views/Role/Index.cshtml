@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "Roles";
}

<div class="container">
    <h1>Roles</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Role</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Role Name</th>
                <th>Page Access Count</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.RoleName</td>
                    <td>@item.PageAccesses.Count</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="ManagePageAccess" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Manage Access</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>