@model Rospand_IMS.Models.Vendor

@{
    ViewData["Title"] = "Vendor Details";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <div class="row">
            <div class="col-md-6">
                <h4>Vendor Details</h4>
            </div>
            <div class="col-md-6 text-right">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light btn-sm">
                    <i class="fa fa-edit"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="fa fa-list"></i> Back to List
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <!-- Basic Information Section -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5>Basic Information</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label class="font-weight-bold">Vendor Type:</label>
                        <p>@Model.VendorType</p>
                    </div>
                    <div class="col-md-4">
                        <label class="font-weight-bold">Display Name:</label>
                        <p>@Model.VendorDisplayName</p>
                    </div>
                    <div class="col-md-4">
                        <label class="font-weight-bold">Company Name:</label>
                        <p>@Model.CompanyName</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label class="font-weight-bold">Contact Person:</label>
                        <p>@Model.ContactPersonName</p>
                    </div>
                    <div class="col-md-4">
                        <label class="font-weight-bold">Primary Contact:</label>
                        <p>@Model.Salutation @Model.FirstName @Model.LastName</p>
                    </div>
                    <div class="col-md-4">
                        <label class="font-weight-bold">Email:</label>
                        <p>@Model.VendorEmail</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <label class="font-weight-bold">Phone:</label>
                        <p>@Model.CustomerPhone</p>
                    </div>
                    <div class="col-md-4">
                        <label class="font-weight-bold">Work Phone:</label>
                        <p>@Model.WorkPhone</p>
                    </div>
                    <div class="col-md-4">
                        <label class="font-weight-bold">Mobile:</label>
                        <p>@Model.Mobile</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tax and Financial Information Section -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5>Tax and Financial Information</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label class="font-weight-bold">Tax Type:</label>
                        <p>@(Model.TaxType?.Name ?? "N/A")</p>
                    </div>
                    <div class="col-md-4">
                        <label class="font-weight-bold">TRN Number:</label>
                        <p>@(Model.TRNNumber ?? "N/A")</p>
                    </div>
                    <div class="col-md-4">
                        <label class="font-weight-bold">Payment Terms:</label>
                        <p>@(Model.PaymentTerm?.Name ?? "N/A")</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <label class="font-weight-bold">Currency:</label>
                        <p>@(Model.Currency?.Code ?? "N/A")</p>
                    </div>
                    <div class="col-md-4">
                        <label class="font-weight-bold">Opening Balance:</label>
                        <p>@(Model.OpeningBalance.HasValue ? Model.OpeningBalance.Value.ToString("C") : "N/A")</p>

                    </div>
                </div>
            </div>
        </div>

        <!-- Billing Address Section -->
        @if (Model.BillingAddress != null)
        {
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5>Billing Address</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="font-weight-bold">Attention:</label>
                            <p>@Model.BillingAddress.Attention</p>
                        </div>
                        <div class="col-md-4">
                            <label class="font-weight-bold">Contact Number:</label>
                            <p>@Model.BillingAddress.ContactNo</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="font-weight-bold">Country:</label>
                            <p>@Model.BillingAddress.Country?.Name</p>
                        </div>
                        <div class="col-md-4">
                            <label class="font-weight-bold">State:</label>
                            <p>@Model.BillingAddress.State?.Name</p>
                        </div>
                        <div class="col-md-4">
                            <label class="font-weight-bold">City:</label>
                            <p>@Model.BillingAddress.City?.Name</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="font-weight-bold">Zip Code:</label>
                            <p>@Model.BillingAddress.ZipCode</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <label class="font-weight-bold">Street Address:</label>
                            <p>@Model.BillingAddress.StreetAddress</p>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Shipping Address Section -->
        @if (Model.ShippingAddress != null && !Model.ShippingSameAsBilling)
        {
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5>Shipping Address</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="font-weight-bold">Attention:</label>
                            <p>@Model.ShippingAddress.Attention</p>
                        </div>
                        <div class="col-md-4">
                            <label class="font-weight-bold">Contact Number:</label>
                            <p>@Model.ShippingAddress.ContactNo</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="font-weight-bold">Country:</label>
                            <p>@Model.ShippingAddress.Country?.Name</p>
                        </div>
                        <div class="col-md-4">
                            <label class="font-weight-bold">State:</label>
                            <p>@Model.ShippingAddress.State?.Name</p>
                        </div>
                        <div class="col-md-4">
                            <label class="font-weight-bold">City:</label>
                            <p>@Model.ShippingAddress.City?.Name</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="font-weight-bold">Zip Code:</label>
                            <p>@Model.ShippingAddress.ZipCode</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <label class="font-weight-bold">Street Address:</label>
                            <p>@Model.ShippingAddress.StreetAddress</p>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (Model.ShippingSameAsBilling)
        {
            <div class="alert alert-info">
                Shipping address is same as billing address.
            </div>
        }
    </div>
</div>