@model Rospand_IMS.Models.ProductIndexViewModel

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>
<partial name="_NotificationPartial" />
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-row">
        <div class="form-group col-md-4">
            <input type="text" name="searchString" class="form-control" placeholder="Search..." value="@Model.SearchString" />
        </div>
        <div class="form-group col-md-2">
            <select name="productType" class="form-control" asp-items="Html.GetEnumSelectList<ProductType>()">
                <option value="">All Types</option>
            </select>
        </div>
        <div class="form-group col-md-3">
            <select name="categoryId" class="form-control">
                <option value="">All Categories</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id" selected="@(category.Id == Model.SelectedCategoryId)">@category.Name</option>
                }
            </select>
        </div>
        <div class="form-group col-md-3">
            <input type="submit" value="Filter" class="btn btn-secondary" />
            <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
        </div>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>SKU</th>
            <th>Name</th>
            <th>Type</th>
            <th>Category</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.SKU</td>
                <td>@item.Name</td>
                <td>@item.Type</td>
                <td>@(item.Category?.Name ?? "N/A")</td>
                <td>@(item.SalesPrice?.ToString("C") ?? "N/A")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this product?');" style="display:inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
        function confirmDelete(id, name) {
        if (confirm(`Are you sure you want to delete the product '${name}'?`)) {
            // Get the anti-forgery token
            var token = $('input[name="__RequestVerificationToken"]').val();

            // Call delete action via AJAX
            $.ajax({
                url: '/Product/Delete/' + id,
                type: 'POST',
                headers: {
                    "RequestVerificationToken": token
                },
                success: function(result) {
                    // Reload the page to see changes and notification
                    window.location.href = '@Url.Action("Index")';
                },
                error: function(xhr, status, error) {
                    // Show error alert immediately
                    alert('Error deleting product: ' + xhr.responseText);
                }
            });
        }
        return false;
    }
</script>