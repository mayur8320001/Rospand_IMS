@model CostCategory

<h2>Cost Category Details</h2>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">Category Type</dt>
        <dd class="col-sm-9">
            <span class="badge @(Model.IsDirectCost ? "badge-primary" : "badge-info")">
                @(Model.IsDirectCost ? "Direct Cost" : "Indirect Cost")
            </span>
        </dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsActive)</dt>
        <dd class="col-sm-9">
            <span class="badge @(Model.IsActive ? "badge-success" : "badge-secondary")">
                @(Model.IsActive ? "Active" : "Inactive")
            </span>
        </dd>

        <dt class="col-sm-3">Created Date</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedDate)</dd>

        <dt class="col-sm-3">Modified Date</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ModifiedDate)</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>