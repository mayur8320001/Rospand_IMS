@model Rospand_IMS.Models.CustomerViewModel

@{
    ViewData["Title"] = "Create Customer";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white py-2">
        <h6 class="m-0">Create New Customer</h6>
    </div>
    <div class="card-body p-3">
        <form asp-action="Create" id="customerForm">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger small p-2"></div>

            <div class="row g-2 mb-2">
                <div class="col-md-6">
                    <label asp-for="CustomerType" class="form-label small fw-bold"></label>
                    <select asp-for="CustomerType" class="form-select form-select-sm">
                        <option value="Individual">Individual</option>
                        <option value="Business">Business</option>
                    </select>
                    <span asp-validation-for="CustomerType" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="CustomerDisplayName" class="form-label small fw-bold"></label>
                    <input asp-for="CustomerDisplayName" class="form-control form-control-sm" />
                    <span asp-validation-for="CustomerDisplayName" class="text-danger small"></span>
                </div>
            </div>

            <div id="individualFields" class="@(Model.CustomerType == "Business" ? "d-none" : "")">
                <div class="row g-2 mb-2">
                    <div class="col-md-2">
                        <label asp-for="Salutation" class="form-label small fw-bold"></label>
                        <select asp-for="Salutation" class="form-select form-select-sm">
                            <option value="">Select</option>
                            <option value="Mr.">Mr.</option>
                            <option value="Mrs.">Mrs.</option>
                            <option value="Ms.">Ms.</option>
                            <option value="Dr.">Dr.</option>
                        </select>
                        <span asp-validation-for="Salutation" class="text-danger small"></span>
                    </div>
                    <div class="col-md-5">
                        <label asp-for="FirstName" class="form-label small fw-bold"></label>
                        <input asp-for="FirstName" class="form-control form-control-sm" />
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                    </div>
                    <div class="col-md-5">
                        <label asp-for="LastName" class="form-label small fw-bold"></label>
                        <input asp-for="LastName" class="form-control form-control-sm" />
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div id="businessFields" class="@(Model.CustomerType == "Individual" ? "d-none" : "")">
                <div class="row g-2 mb-2">
                    <div class="col-md-6">
                        <label asp-for="CompanyName" class="form-label small fw-bold"></label>
                        <input asp-for="CompanyName" class="form-control form-control-sm" />
                        <span asp-validation-for="CompanyName" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ContactPersonName" class="form-label small fw-bold"></label>
                        <input asp-for="ContactPersonName" class="form-control form-control-sm" />
                        <span asp-validation-for="ContactPersonName" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="row g-2 mb-2">
                <div class="col-md-6">
                    <label asp-for="CustomerEmail" class="form-label small fw-bold"></label>
                    <input asp-for="CustomerEmail" class="form-control form-control-sm" />
                    <span asp-validation-for="CustomerEmail" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="WorkPhone" class="form-label small fw-bold"></label>
                    <input asp-for="WorkPhone" class="form-control form-control-sm" />
                    <span asp-validation-for="WorkPhone" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Mobile" class="form-label small fw-bold"></label>
                    <input asp-for="Mobile" class="form-control form-control-sm" />
                    <span asp-validation-for="Mobile" class="text-danger small"></span>
                </div>
            </div>

            <div class="row g-2 mb-2">
                <div class="col-md-4">
                    <label asp-for="CurrencyId" class="form-label small fw-bold"></label>
                    <select asp-for="CurrencyId" asp-items="Model.Currencies" class="form-select form-select-sm">
                        <option value="">-- Currency --</option>
                    </select>
                    <span asp-validation-for="CurrencyId" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="PaymentTermId" class="form-label small fw-bold"></label>
                    <select asp-for="PaymentTermId" asp-items="Model.PaymentTerms" class="form-select form-select-sm">
                        <option value="">-- Payment Term --</option>
                    </select>
                    <span asp-validation-for="PaymentTermId" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="OpeningBalance" class="form-label small fw-bold"></label>
                    <input asp-for="OpeningBalance" class="form-control form-control-sm" />
                    <span asp-validation-for="OpeningBalance" class="text-danger small"></span>
                </div>
            </div>

            <div class="row g-2 mb-2">
                <div class="col-md-6">
                    <label asp-for="TaxTypeId" class="form-label small fw-bold"></label>
                    <select asp-for="TaxTypeId" asp-items="Model.TaxTypes" class="form-select form-select-sm">
                        <option value="">-- Tax Type --</option>
                    </select>
                    <span asp-validation-for="TaxTypeId" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="TRNNumber" class="form-label small fw-bold"></label>
                    <input asp-for="TRNNumber" class="form-control form-control-sm" />
                    <span asp-validation-for="TRNNumber" class="text-danger small"></span>
                </div>
            </div>

            <h6 class="mt-3 mb-2 border-bottom pb-1 small fw-bold">Billing Address</h6>
            <div class="row g-2 mb-2">
                <div class="col-md-6">
                    <label asp-for="BillingAttention" class="form-label small fw-bold"></label>
                    <input asp-for="BillingAttention" class="form-control form-control-sm" />
                    <span asp-validation-for="BillingAttention" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="BillingContactNo" class="form-label small fw-bold"></label>
                    <input asp-for="BillingContactNo" class="form-control form-control-sm" />
                    <span asp-validation-for="BillingContactNo" class="text-danger small"></span>
                </div>
            </div>

            <div class="row g-2 mb-2">
                <div class="col-md-4">
                    <label asp-for="BillingCountryId" class="form-label small fw-bold"></label>
                    <select asp-for="BillingCountryId" asp-items="Model.Countries" class="form-select form-select-sm country-select">
                        <option value="">-- Country --</option>
                    </select>
                    <span asp-validation-for="BillingCountryId" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="BillingStateId" class="form-label small fw-bold"></label>
                    <select asp-for="BillingStateId" class="form-select form-select-sm state-select">
                        <option value="">-- State --</option>
                    </select>
                    <span asp-validation-for="BillingStateId" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="BillingCityId" class="form-label small fw-bold"></label>
                    <select asp-for="BillingCityId" class="form-select form-select-sm city-select">
                        <option value="">-- City --</option>
                    </select>
                    <span asp-validation-for="BillingCityId" class="text-danger small"></span>
                </div>
            </div>

            <div class="row g-2 mb-3">
                <div class="col-md-6">
                    <label asp-for="BillingStreetAddress" class="form-label small fw-bold"></label>
                    <input asp-for="BillingStreetAddress" class="form-control form-control-sm" />
                    <span asp-validation-for="BillingStreetAddress" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="BillingZipCode" class="form-label small fw-bold"></label>
                    <input asp-for="BillingZipCode" class="form-control form-control-sm" />
                    <span asp-validation-for="BillingZipCode" class="text-danger small"></span>
                </div>
            </div>

            <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" role="switch" asp-for="ShippingSameAsBilling">
                <label class="form-check-label small fw-bold" asp-for="ShippingSameAsBilling"></label>
            </div>

            <div id="shippingAddressSection" class="@(Model.ShippingSameAsBilling ? "d-none" : "")">
                <h6 class="mt-2 mb-2 border-bottom pb-1 small fw-bold">Shipping Address</h6>
                <div class="row g-2 mb-2">
                    <div class="col-md-6">
                        <label asp-for="ShippingAttention" class="form-label small fw-bold"></label>
                        <input asp-for="ShippingAttention" class="form-control form-control-sm" />
                        <span asp-validation-for="ShippingAttention" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ShippingContactNo" class="form-label small fw-bold"></label>
                        <input asp-for="ShippingContactNo" class="form-control form-control-sm" />
                        <span asp-validation-for="ShippingContactNo" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row g-2 mb-2">
                    <div class="col-md-4">
                        <label asp-for="ShippingCountryId" class="form-label small fw-bold"></label>
                        <select asp-for="ShippingCountryId" class="form-select form-select-sm shipping-country-select">
                            <option value="">-- Country --</option>
                        </select>
                        <span asp-validation-for="ShippingCountryId" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="ShippingStateId" class="form-label small fw-bold"></label>
                        <select asp-for="ShippingStateId" class="form-select form-select-sm shipping-state-select">
                            <option value="">-- State --</option>
                        </select>
                        <span asp-validation-for="ShippingStateId" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="ShippingCityId" class="form-label small fw-bold"></label>
                        <select asp-for="ShippingCityId" class="form-select form-select-sm shipping-city-select">
                            <option value="">-- City --</option>
                        </select>
                        <span asp-validation-for="ShippingCityId" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row g-2 mb-3">
                    <div class="col-md-6">
                        <label asp-for="ShippingStreetAddress" class="form-label small fw-bold"></label>
                        <input asp-for="ShippingStreetAddress" class="form-control form-control-sm" />
                        <span asp-validation-for="ShippingStreetAddress" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ShippingZipCode" class="form-label small fw-bold"></label>
                        <input asp-for="ShippingZipCode" class="form-control form-control-sm" />
                        <span asp-validation-for="ShippingZipCode" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <button type="submit" class="btn btn-sm btn-primary me-2">
                    <i class="fas fa-save me-1"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                    <i class="fas fa-times me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // Toggle between individual and business fields
            $('#CustomerType').change(function () {
                $('#individualFields, #businessFields').toggleClass('d-none', $(this).val() !== 'Individual');
            });

            // Toggle shipping address section
            $('#ShippingSameAsBilling').change(function () {
                $('#shippingAddressSection').toggleClass('d-none', $(this).is(':checked'));
                if ($(this).is(':checked')) {
                    copyBillingToShipping();
                }
            });

            // Cascading dropdown for billing address
            $('.country-select').change(function () {
                var countryId = $(this).val();
                $('.state-select').empty().append('<option value="">-- State --</option>');
                $('.city-select').empty().append('<option value="">-- City --</option>');

                if (countryId) {
                    $.getJSON('/Customer/GetStatesByCountry', { countryId: countryId }, function (data) {
                        $.each(data, function (index, item) {
                            $('.state-select').append($('<option></option>').val(item.id).text(item.name));
                        });
                    });
                }
            });

            $('.state-select').change(function () {
                var stateId = $(this).val();
                $('.city-select').empty().append('<option value="">-- City --</option>');

                if (stateId) {
                    $.getJSON('/Customer/GetCitiesByState', { stateId: stateId }, function (data) {
                        $.each(data, function (index, item) {
                            $('.city-select').append($('<option></option>').val(item.id).text(item.name));
                        });
                    });
                }
            });

            // Cascading dropdown for shipping address
            $('.shipping-country-select').change(function () {
                var countryId = $(this).val();
                $('.shipping-state-select').empty().append('<option value="">-- State --</option>');
                $('.shipping-city-select').empty().append('<option value="">-- City --</option>');

                if (countryId) {
                    $.getJSON('/Customer/GetStatesByCountry', { countryId: countryId }, function (data) {
                        $.each(data, function (index, item) {
                            $('.shipping-state-select').append($('<option></option>').val(item.id).text(item.name));
                        });
                    });
                }
            });

            $('.shipping-state-select').change(function () {
                var stateId = $(this).val();
                $('.shipping-city-select').empty().append('<option value="">-- City --</option>');

                if (stateId) {
                    $.getJSON('/Customer/GetCitiesByState', { stateId: stateId }, function (data) {
                        $.each(data, function (index, item) {
                            $('.shipping-city-select').append($('<option></option>').val(item.id).text(item.name));
                        });
                    });
                }
            });

            function copyBillingToShipping() {
                $('.shipping-country-select').val($('.country-select').val()).trigger('change');
                setTimeout(() => {
                    $('.shipping-state-select').val($('.state-select').val()).trigger('change');
                    setTimeout(() => {
                        $('.shipping-city-select').val($('.city-select').val());
                    }, 200);
                }, 200);
                $('#ShippingAttention').val($('#BillingAttention').val());
                $('#ShippingContactNo').val($('#BillingContactNo').val());
                $('#ShippingStreetAddress').val($('#BillingStreetAddress').val());
                $('#ShippingZipCode').val($('#BillingZipCode').val());
            }
        });
    </script>
}