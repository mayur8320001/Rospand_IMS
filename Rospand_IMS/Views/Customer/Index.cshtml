@model IEnumerable<Rospand_IMS.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Customer List</h6>
        <a asp-action="Create" class="btn btn-primary btn-sm">Create New</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Display Name</th>
                        <th>Type</th>
                        <th>Contact</th>
                        <th>Phone</th>
                        <th>Balance</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CustomerDisplayName)</td>
                            <td>@Html.DisplayFor(modelItem => item.CustomerType)</td>
                            <td>
                                @if (item.CustomerType == "Business")
                                {
                                    @Html.DisplayFor(modelItem => item.CompanyName)
                                }
                                else
                                {
                                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Mobile)</td>
                            <td class="text-right">@item.OpeningBalance.ToString("C")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>