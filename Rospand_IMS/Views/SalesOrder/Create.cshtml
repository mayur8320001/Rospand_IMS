@model Rospand_IMS.Models.SalesOrderCreateViewModel

@{
    ViewData["Title"] = "Create Sales Order";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white py-2">
        <h5 class="m-0">Create Sales Order</h5>
    </div>
    <div class="card-body p-3">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger small p-2 mb-3"></div>

            <div class="row g-2 mb-3">
                <div class="col-md-3">
                    <label asp-for="SONumber" class="form-label small fw-bold"></label>
                    <input asp-for="SONumber" class="form-control form-control-sm" readonly />
                </div>
                <div class="col-md-3">
                    <label asp-for="OrderDate" class="form-label small fw-bold"></label>
                    <input asp-for="OrderDate" class="form-control form-control-sm" type="date" />
                    <span asp-validation-for="OrderDate" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="ExpectedDeliveryDate" class="form-label small fw-bold"></label>
                    <input asp-for="ExpectedDeliveryDate" class="form-control form-control-sm" type="date" />
                </div>
                <div class="col-md-3">
                    <label asp-for="CurrencyId" class="form-label small fw-bold"></label>
                    <select asp-for="CurrencyId" asp-items="@(new SelectList(Model.Currencies, "Id", "Name"))"
                            class="form-select form-select-sm"></select>
                    <span asp-validation-for="CurrencyId" class="text-danger small"></span>
                </div>
            </div>

            <div class="row g-2 mb-3">
                <div class="col-md-6">
                    <label asp-for="CustomerId" class="form-label small fw-bold"></label>
                    <select asp-for="CustomerId" asp-items="@(new SelectList(Model.Customers, "Id", "CustomerDisplayName"))"
                            class="form-select form-select-sm"></select>
                    <span asp-validation-for="CustomerId" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Notes" class="form-label small fw-bold"></label>
                    <textarea asp-for="Notes" class="form-control form-control-sm" rows="2"></textarea>
                </div>
            </div>

            <h6 class="mt-3 mb-2 border-bottom pb-1 small fw-bold">Order Items</h6>
            <div class="table-responsive">
                <table class="table table-sm table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th class="small fw-bold">Product</th>
                            <th class="small fw-bold">Available</th>
                            <th class="small fw-bold">Qty</th>
                            <th class="small fw-bold">Unit Price</th>
                            <th class="small fw-bold">Disc. %</th>
                            <th class="small fw-bold">Tax %</th>
                            <th class="small fw-bold">Notes</th>
                            <th class="small fw-bold">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Items.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input type="hidden" asp-for="Items[i].ProductId" />
                                    <input type="hidden" asp-for="Items[i].ProductName" />
                                    <input type="hidden" asp-for="Items[i].ProductSKU" />
                                    <span class="small">@Model.Items[i].ProductName <span class="text-muted">(@Model.Items[i].ProductSKU)</span></span>
                                </td>
                                <td class="small">@Model.Items[i].QuantityAvailable</td>
                                <td>
                                    <input asp-for="Items[i].Quantity" class="form-control form-control-sm" />
                                    <span asp-validation-for="Items[i].Quantity" class="text-danger small"></span>
                                </td>
                                <td>
                                    <input asp-for="Items[i].UnitPrice" class="form-control form-control-sm" />
                                    <span asp-validation-for="Items[i].UnitPrice" class="text-danger small"></span>
                                </td>
                                <td>
                                    <input asp-for="Items[i].DiscountPercent" class="form-control form-control-sm" />
                                </td>
                                <td>
                                    <input asp-for="Items[i].TaxRate" class="form-control form-control-sm" />
                                </td>
                                <td>
                                    <input asp-for="Items[i].Notes" class="form-control form-control-sm" />
                                </td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-outline-danger remove-item">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="row g-2 mt-2 mb-3">
                <div class="col-md-8">
                    <label class="form-label small fw-bold">Add Product</label>
                    <select id="addProduct" class="form-select form-select-sm">
                        <option value="">Select a product...</option>
                        @foreach (var product in Model.AvailableProducts)
                        {
                            <option value="@product.ProductId"
                                    data-name="@product.ProductName"
                                    data-sku="@product.ProductSKU"
                                    data-available="@product.QuantityAvailable"
                                    data-price="@product.SalesPrice">
                                @product.ProductName (@product.ProductSKU)
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="button" id="addItemButton" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus me-1"></i> Add Item
                    </button>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <button type="submit" class="btn btn-sm btn-success me-2">
                    <i class="fas fa-save me-1"></i> Create Order
                </button>
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                    <i class="fas fa-times me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#addItemButton").click(function () {
                var selected = $("#addProduct option:selected");
                var productId = selected.val();
                if (!productId) return;

                var name = selected.data("name");
                var sku = selected.data("sku");
                var available = selected.data("available");
                var price = selected.data("price");

                var index = $("tbody tr").length;
                var row = `
                    <tr>
                        <td>
                            <input type="hidden" name="Items[${index}].ProductId" value="${productId}" />
                            <input type="hidden" name="Items[${index}].ProductName" value="${name}" />
                            <input type="hidden" name="Items[${index}].ProductSKU" value="${sku}" />
                            <span class="small">${name} <span class="text-muted">(${sku})</span></span>
                        </td>
                        <td class="small">
                            <input type="hidden" name="Items[${index}].QuantityAvailable" value="${available}" />
                            ${available}
                        </td>
                        <td>
                            <input name="Items[${index}].Quantity" class="form-control form-control-sm" />
                            <span class="text-danger small field-validation-valid" data-valmsg-for="Items[${index}].Quantity" data-valmsg-replace="true"></span>
                        </td>
                        <td>
                            <input name="Items[${index}].UnitPrice" class="form-control form-control-sm" value="${price}" />
                            <span class="text-danger small field-validation-valid" data-valmsg-for="Items[${index}].UnitPrice" data-valmsg-replace="true"></span>
                        </td>
                        <td>
                            <input name="Items[${index}].DiscountPercent" class="form-control form-control-sm" value="0" />
                        </td>
                        <td>
                            <input name="Items[${index}].TaxRate" class="form-control form-control-sm" value="0" />
                        </td>
                        <td>
                            <input name="Items[${index}].Notes" class="form-control form-control-sm" />
                        </td>
                        <td>
                            <button type="button" class="btn btn-sm btn-outline-danger remove-item">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                `;
                $("tbody").append(row);
                $("#addProduct").val("").trigger("change");
            });

            $(document).on("click", ".remove-item", function () {
                $(this).closest("tr").remove();
                // Reindex all remaining rows
                $("tbody tr").each(function (index) {
                    $(this).find("input, select").each(function () {
                        var name = $(this).attr("name");
                        if (name) {
                            name = name.replace(/\[\d+\]/, `[${index}]`);
                            $(this).attr("name", name);
                        }
                    });
                });
            });
        });
    </script>
}