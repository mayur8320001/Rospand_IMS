@model IEnumerable<Rospand_IMS.Models.SalesOrder>

<h2>Sales Orders</h2>

<form asp-action="Index" method="get">
    <div class="form-group">
        <label>Filter by Status:</label>
        <select name="status" asp-items="Html.GetEnumSelectList<Rospand_IMS.Models.SalesOrderStatus>()" class="form-control">
            <option value="">All</option>
        </select>
        <input type="text" name="searchString" value="@ViewBag.SearchString" placeholder="Search by SO Number or Customer" class="form-control" />
        <button type="submit" class="btn btn-primary">Filter</button>
        <a asp-action="Create" class="btn btn-success">Create New Sales Order</a>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>SO Number</th>
            <th>Customer</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Total Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.SONumber</td>
                <td>@order.Customer.CustomerDisplayName</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.Status</td>
                <td>@order.TotalAmount.ToString("C", new System.Globalization.CultureInfo(order.Currency.Code))</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info">Details</a>
                    @if (order.Status == SalesOrderStatus.Draft)
                    {
                        <form asp-action="Confirm" asp-route-id="@order.Id" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@order.Id" />
                            <button type="submit" class="btn btn-warning">Confirm</button>
                        </form>
                    }
                    @if (order.Status == SalesOrderStatus.Confirmed)
                    {
                        <a asp-action="CreateOutwardEntry" asp-route-salesOrderId="@order.Id" class="btn btn-primary">Create Outward Entry</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>