@model IEnumerable<Rospand_IMS.Models.Account.Ledger>

@{
    ViewData["Title"] = "Ledgers";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Ledgers</h1>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createLedgerModal">
            <i class="fas fa-plus"></i> Create New Ledger
        </button>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Ledger Name</th>
                                <th>Type</th>
                                <th>Opening Balance</th>
                                <th>Current Balance</th>
                                <th>Created Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ledger in Model)
                            {
                                <tr>
                                    <td>@ledger.LedgerName</td>
                                    <td>@ledger.LedgerType</td>
                                    <td>@ledger.OpeningBalance.ToString("C")</td>
                                    <td>@ledger.CurrentBalance.ToString("C")</td>
                                    <td>@ledger.CreatedDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#editLedgerModal"
                                                data-id="@ledger.LedgerId"
                                                data-name="@ledger.LedgerName"
                                                data-type="@ledger.LedgerType"
                                                data-opening="@ledger.OpeningBalance">
                                            Edit
                                        </button>
                                        <form asp-action="DeleteLedger" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this ledger?');">
                                            <input type="hidden" name="id" value="@ledger.LedgerId" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-book fa-3x text-muted mb-3"></i>
                    <h4>No Ledgers Found</h4>
                    <p class="text-muted">Create your first ledger to get started.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Create Ledger Modal -->
<div class="modal fade" id="createLedgerModal" tabindex="-1" aria-labelledby="createLedgerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreateLedger" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="createLedgerModalLabel">Create New Ledger</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="LedgerName" class="form-label">Ledger Name</label>
                        <input type="text" class="form-control" id="LedgerName" name="LedgerName" required>
                    </div>
                    <div class="mb-3">
                        <label for="LedgerType" class="form-label">Ledger Type</label>
                        <select class="form-select" id="LedgerType" name="LedgerType" required>
                            <option value="">Select Type</option>
                            <option value="Asset">Asset</option>
                            <option value="Liability">Liability</option>
                            <option value="Income">Income</option>
                            <option value="Expense">Expense</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="OpeningBalance" class="form-label">Opening Balance</label>
                        <input type="number" class="form-control" id="OpeningBalance" name="OpeningBalance" step="0.01" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Ledger</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Ledger Modal -->
<div class="modal fade" id="editLedgerModal" tabindex="-1" aria-labelledby="editLedgerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="EditLedger" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="editLedgerModalLabel">Edit Ledger</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="LedgerId" name="LedgerId" />
                    <div class="mb-3">
                        <label for="editLedgerName" class="form-label">Ledger Name</label>
                        <input type="text" class="form-control" id="editLedgerName" name="LedgerName" required>
                    </div>
                    <div class="mb-3">
                        <label for="editLedgerType" class="form-label">Ledger Type</label>
                        <select class="form-select" id="editLedgerType" name="LedgerType" required>
                            <option value="">Select Type</option>
                            <option value="Asset">Asset</option>
                            <option value="Liability">Liability</option>
                            <option value="Income">Income</option>
                            <option value="Expense">Expense</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="editOpeningBalance" class="form-label">Opening Balance</label>
                        <input type="number" class="form-control" id="editOpeningBalance" name="OpeningBalance" step="0.01" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Populate edit modal with ledger data
        var editLedgerModal = document.getElementById('editLedgerModal');
        editLedgerModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var name = button.getAttribute('data-name');
            var type = button.getAttribute('data-type');
            var opening = button.getAttribute('data-opening');

            var modal = this;
            modal.querySelector('#LedgerId').value = id;
            modal.querySelector('#editLedgerName').value = name;
            modal.querySelector('#editLedgerType').value = type;
            modal.querySelector('#editOpeningBalance').value = opening;
        });
    </script>
}