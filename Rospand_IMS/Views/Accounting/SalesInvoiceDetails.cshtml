@model Rospand_IMS.Models.Account.SalesInvoice

@{
    ViewData["Title"] = "Sales Invoice Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Sales Invoice Details</h1>
        <a asp-action="SalesInvoices" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Sales Invoices
        </a>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Invoice Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Invoice Number</dt>
                                <dd class="col-sm-8">@Model.InvoiceNumber</dd>

                                <dt class="col-sm-4">Customer ID</dt>
                                <dd class="col-sm-8">@Model.CustomerId</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Invoice Date</dt>
                                <dd class="col-sm-8">@Model.InvoiceDate.ToString("dd/MM/yyyy")</dd>

                                <dt class="col-sm-4">Total Amount</dt>
                                <dd class="col-sm-8">@Model.TotalAmount.ToString("C")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Invoice Items</h5>
                </div>
                <div class="card-body">
                    @if (Model.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Product ID</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Total Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>@item.ProductId</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.UnitPrice.ToString("C")</td>
                                            <td>@item.TotalPrice.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No items found for this invoice.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>