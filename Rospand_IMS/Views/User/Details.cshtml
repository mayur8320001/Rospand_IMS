@model UserViewModel

@{
    ViewData["Title"] = "User Details";
}

<div class="container">
    <h1>User Details</h1>

    <div>
        <h4>User</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Username</dt>
            <dd class="col-sm-10">@Model.Username</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>

            <dt class="col-sm-2">Role</dt>
            <dd class="col-sm-10">@Model.Role</dd>

            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-danger">Inactive</span>
                }
            </dd>

            <dt class="col-sm-2">Created Date</dt>
            <dd class="col-sm-10">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-2">Last Login</dt>
            <dd class="col-sm-10">
                @(Model.LastLoginDate?.ToString("dd/MM/yyyy HH:mm") ?? "Never")
            </dd>
        </dl>
    </div>

    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>